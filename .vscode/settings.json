{
  // Run ESLint on save
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },

  // Run Stylelint for CSS inside Astro/HTML
  "stylelint.validate": [
    "css",
    "html",
    "astro"
  ],

  // Auto format (Prettier via ESLint/Stylelint)
  "editor.formatOnSave": true
}
